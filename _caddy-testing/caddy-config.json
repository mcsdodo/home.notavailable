{
  "admin": {
    "listen": "0.0.0.0:2019"
  },
  "apps": {
    "tls": {
      "automation": {
        "policies": [
          {
            "subjects": ["*.lan", "*.test.lan"],
            "issuers": [{"module": "internal"}]
          }
        ]
      }
    },
    "http": {
      "servers": {
        "srv0": {
          "listen": [":2020"],
          "routes": [
            {
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "headers": {
                    "request": {
                      "set": {
                        "Host": ["localhost:2019"]
                      }
                    }
                  },
                  "upstreams": [
                    {"dial": "localhost:2019"}
                  ]
                }
              ]
            }
          ]
        },
        "srv1": {
          "listen": [":443", ":8080"],
          "automatic_https": {
            "disable": true
          },
          "routes": [
            {
              "@id": "wildcard_test_lan",
              "match": [{"host": ["*.test.lan"]}],
              "handle": [
                {
                  "handler": "static_response",
                  "body": "Wildcard catch-all for *.test.lan - route ordering test FAILED if you see this for specific routes",
                  "status_code": 200
                }
              ],
              "terminal": true
            }
          ]
        },
        "srv2": {
          "listen": [":80"],
          "routes": [
            {
              "@id": "placeholder_http",
              "match": [{"host": ["placeholder-http.test.lan"]}],
              "handle": [
                {
                  "handler": "static_response",
                  "body": "Placeholder HTTP route"
                }
              ],
              "terminal": true
            }
          ]
        }
      }
    }
  }
}
